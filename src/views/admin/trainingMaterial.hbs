{{!< dashboard}} <style>
  .container { display: flex; flex-direction: column; margin-top: 20px } .main-content { display: flex; justify-content:
  center; width: 100%; } table { table-layout: fixed; width: 100%;
  border-collapse: collapse; } th, td { padding: 15px; text-align: left;
  font-size: 16px; } th { background-color: #2E5A92; color: #fff; } table, th,
  td { width: 1fr; text-align: center; } table tbody tr { background-color:
  white; } table tbody tr:nth-child(odd) { background-color: #f2f2f2; } table
  thead th { border: none; } .grade-input { width: 80px; padding: 5px;
  font-size: 16px; } .download-btn { background-color: #2E5A92; color: white;
  border: 1px solid white; border-radius: 4px; cursor: pointer; padding: 2px; }
  .download-btn:hover { background-color: white; color: #2E5A92; }
  .add-button {
  background-color: #2E5A92; color: #fff; padding: 10px 15px; border: none;
  border-radius: 5px; cursor: pointer; } .add-button:hover { background-color:
  #2E5ABB; }
  </style>
  <div class="container">
    <div>
      <a class="add-button" href="/admin/session/{{this.session.id}}/materials/create">Upload Materials</a>
    </div>
    <div class="main-content mt-4">
      <table id="participantTable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Type</th>
            <th>File</th>
          </tr>
        </thead>
        <tbody>
          {{#each documents}}
          <tr>
            <td>{{this.MaterialID}}</td>
            <td>{{this.DocumentType}}</td>
            <td><a download="true" class="download-btn" href="{{this.FilePath}}">Download</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <script>
    new DataTable('#participantTable');
  </script>