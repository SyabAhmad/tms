{{!< managerDashboard}}

    <style>


        .container {
            display: flex;
        }


        .main-content {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        table {
            width: 80%;
            margin: 50px;
            table-layout: fixed;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
            text-align: left;
            font-size: 16px;
        }

        th {
            background-color: #2E5A92;
            color: #fff;
        }

        table, th, td {
            width: 1fr;
            text-align: center;
        }

        table tbody tr {
            background-color: white;
        }

        table tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        table thead th {
            border: none;
        }

        .grade-input {
            width: 80px;
            padding: 5px;
            font-size: 16px;
        }

        .download-btn {
            background-color: #2E5A92;
            color: white;
            border: 1px solid white;
            border-radius: 4px;
            cursor: pointer;
            padding: 2px;
        }

        .download-btn:hover {
            background-color: white;
            color: #2E5A92;
        }

        .add-button{
            margin-top: 20px;
            margin-left:130px;
            background-color: #2E5A92;
            color:white;
            padding: 5px 10px;
        }
    </style>

        <div class="main-content">

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Program</th>
                        <th>Sessions completed</th>
                        <th>Deliverables Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each trainers}}
                    <tr> 
                                <td>{{UserID}}</td>
                                <td>{{this.Username}}</td>
                                <td>{{this.program}}</td>
                                <td>{{this.sessionsCompleted}}</td>
                                <td>{{this.program}}</td>

                            </tr>
                            {{/each}}
            </tbody>
        </table>
    </div>
</div>

