{{!< managerDashboard}}
       <style>
        .container {
            display: flex;
        }


        .main-content {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        table {
            width: 80%;
            margin: 50px;
            table-layout: fixed;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
            text-align: left;
            font-size: 16px;
        }

        th {
            background-color: #2E5A92;
            color: #fff;
        }

        table, th, td {
            width: 1fr;
            text-align: center;
        }

        table tbody tr {
            background-color: white;
        }

        table tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        table thead th {
            border: none;
        }

        .grade-input {
            width: 80px;
            padding: 5px;
            font-size: 16px;
        }

        .download-btn {
            background-color: #2E5A92;
            color: white;
            border: 1px solid white;
            border-radius: 4px;
            cursor: pointer;
            padding: 2px;
        }

        .download-btn:hover {
            background-color: white;
            color: #2E5A92;
        }
    </style>
        <div class="main-content">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Student</th>
                        <th>Program</th>
                        <th>Session</th>
                        <th>Assignment</th>
                        <th>Submission</th>
                        <th>File</th>
                        <th>Trainer</th>
                        <th>Marks</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each assignments}}
                      <tr> 
                                <td>{{this.AssignmentID}}</td>
                                <td>{{this.ParticipantID}}</td>
                                <td>{{this.trainingsessions.ProgramID}}</td>
                                <td>{{this.SessionID}}</td>
                                <td>{{this.Title}}</td>
                                <td>{{this.Deadline}}</td>
                                <td><a download="true" class="download-btn" href='{{this.FilePath}}'>Download</a></td>
                                <td>{{this.trainingsessions.TrainerID}}</td>
                                <td>{{this.Grade}}</td>
                            </tr>
                    {{/each}}
            </tbody>
        </table>
    </div>
</div>